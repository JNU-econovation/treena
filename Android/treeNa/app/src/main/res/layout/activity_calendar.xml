<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1480"
    tools:context=".Calendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="57.2"
        android:orientation="vertical"
        android:weightSum="57.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="129.3"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="247.3"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="226"
            android:background="@drawable/treena_logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="95"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="152.7"
            android:background="@drawable/profile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30.1"
        android:orientation="vertical"
        android:weightSum="30.1" />

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="980"
        android:background="#00ffffff"
        app:mcv_selectionColor="#00F"
        app:mcv_showOtherDates="all" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41.7"
        android:orientation="vertical"
        android:weightSum="41.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="98.6"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="68.1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_move_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="108.6"
            android:background="@drawable/home" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="375.2"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_write"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="122.7"
            android:background="@drawable/plus" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="39.2"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="143.7"
        android:orientation="vertical"
        android:weightSum="143.7">

    </LinearLayout>

</LinearLayout>